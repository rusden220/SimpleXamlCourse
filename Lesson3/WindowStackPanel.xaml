<Window x:Class="Lesson3.WindowStackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson3"
        mc:Ignorable="d"
        Title="WindowStackPanel" Height="450" Width="800">
	<StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
		<Button Background="Blue" MinWidth="30" Content="1" />
		<Button Background="White" MinWidth="30" Content="2" />
		<Button Background="Red" MinWidth="30" Content="3" />
	</StackPanel>
</Window>
