<Window x:Class="Lesson3.WindowUniformGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson3"
        mc:Ignorable="d"
        Title="WindowUniformGrid" Height="450" Width="800">
	<UniformGrid Rows="3" Columns="3">
		<Button Content="Left Top" />
		<Button Content="Right Top" />
		<Button Content="Left Bottom" />
		<Button Content="Right Bottom" />		
	</UniformGrid>
</Window>
