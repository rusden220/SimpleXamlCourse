<Window x:Class="Lesson2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson2"
		xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid x:Name="layoutGrid" >
		<Button  HorizontalAlignment="Center" Padding="10" Click="Button_Click">Test</Button>
		<Button x:Name="buttonTest" VerticalAlignment="Center" Padding="10" Height="150" Width="150">
			<Button.HorizontalAlignment>
				<HorizontalAlignment>Center</HorizontalAlignment>
			</Button.HorizontalAlignment>
			<Button.Background>
				<SolidColorBrush Color="Red">
					<SolidColorBrush.Opacity>
						0.6
					</SolidColorBrush.Opacity>
				</SolidColorBrush>
			</Button.Background>
		</Button>
		<Button HorizontalAlignment="Center" VerticalAlignment="Top">
			<Button.Content>
				<local:Phone Name ="fuck you" Price="100"></local:Phone>
			</Button.Content>
		</Button>
	</Grid>
</Window>
